startup_message off
bell_msg ""
vbell off
term rxvt
defscrollback 1024
hardstatus on
hardstatus alwayslastline '%{= .} %-Lw%{= .}%> %n%f %t*%{= .}%+Lw%< %-=%{g}(%{d}%H/%l%{g})'

shelltitle "$ |bash"

screen -t mutt 0 "mutt-patched"
